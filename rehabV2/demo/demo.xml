<odoo>
    <record id="rehab_case_1" model="rehab">
        <field name="name">Juan Pérez</field>
        <field name="injury_level">mild</field>
        <field name="rehab_start_date" eval="datetime.now() - timedelta(days=10)"/>
        <field name="notes">Paciente con esguince de tobillo grado 1. Progreso favorable con ejercicios de estabilidad.</field>
    </record>

    <record id="rehab_case_2" model="rehab">
        <field name="name">María García</field>
        <field name="injury_level">moderate</field>
        <field name="rehab_start_date" eval="datetime.now() - timedelta(days=30)"/>
        <field name="notes">Recuperación post-operatoria de ligamento cruzado. Requiere asistencia de exoesqueleto para marcha.</field>
    </record>

    <record id="rehab_case_3" model="rehab">
        <field name="name">Carlos Ruiz</field>
        <field name="injury_level">severe</field>
        <field name="rehab_start_date" eval="datetime.now()"/>
        <field name="notes">Lesión medular incompleta. Inicio de protocolo intensivo de rehabilitación robótica.</field>
    </record>
</odoo>