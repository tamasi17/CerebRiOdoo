<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rehab_patient_list_v2" model="ir.view">
        <field name="name">rehab.list.v2</field>
        <field name="model">rehab</field>
        <field name="arch" type="xml">
            <list string="Casos de Rehabilitación">
                <field name="name"/>
                <field name="injury_level" widget="badge" decoration-danger="injury_level == 'severe'" decoration-warning="injury_level == 'moderate'" decoration-info="injury_level == 'mild'"/>
                <field name="rehab_start_date"/>
            </list>
        </field>
    </record>

    <record id="view_rehab_patient_form_v2" model="ir.view">
        <field name="name">rehab.form.v2</field>
        <field name="model">rehab</field>
        <field name="arch" type="xml">
            <form string="Ficha de Rehabilitación">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Nombre del paciente..."/>
                            <field name="rehab_start_date"/>
                        </group>
                        <group>
                            <field name="injury_level"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rehab_management_v2" model="ir.actions.act_window">
        <field name="name">Gestión de Rehabilitación</field>
        <field name="res_model">rehab</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer caso de rehabilitación
            </p>
        </field>
    </record>

    <menuitem id="menu_rehab_root_v2"
              name="Rehabilitación"
              web_icon="rehab,static/description/icon.png"
              sequence="10"/>

    <menuitem id="menu_rehab_content_v2"
              name="Pacientes"
              parent="menu_rehab_root_v2"
              sequence="10"/>

    <menuitem id="menu_rehab_list_v2"
              name="Listado de Casos"
              parent="menu_rehab_content_v2"
              action="action_rehab_management_v2"
              sequence="10"/>
</odoo>

