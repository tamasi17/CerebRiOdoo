<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_rating" model="ir.ui.view">
        <field name="name">product.template.form.inherit.rating</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                <div>
                    <field name="average_rating" widget="priority" readonly="1"/>
                    <label for="average_rating" string="Avg Rating"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Client Ratings">
                    <field name="rating_ids" readonly="1">
                        <tree>
                            <field name="partner_id"/>
                            <field name="score"/>
                            <field name="comment"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>