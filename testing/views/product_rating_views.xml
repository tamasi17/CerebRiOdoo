<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_rating_tree" model="ir.ui.view">
        <field name="name">product.rating.tree</field>
        <field name="model">product.rating</field>
        <field name="arch" type="xml">
            <tree string="Product Ratings">
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="partner_id"/>
                <field name="score" widget="priority"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_product_rating_form" model="ir.ui.view">
        <field name="name">product.rating.form</field>
        <field name="model">product.rating</field>
        <field name="arch" type="xml">
            <form string="Product Rating">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_tmpl_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="score" widget="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Comments">
                            <field name="comment"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_rating" model="ir.actions.act_window">
        <field name="name">Product Ratings</field>
        <field name="res_model">product.rating</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_rating_root"
              name="Ratings"
              parent="stock.menu_stock_root"
              sequence="20"/>

    <menuitem id="menu_product_rating"
              name="Product Ratings"
              parent="menu_product_rating_root"
              action="action_product_rating"/>
</odoo>