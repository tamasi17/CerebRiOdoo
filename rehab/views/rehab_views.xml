<odoo>
    <record id="view_rehab_tree" model="ir.view">
        <field name="name">rehab.tree</field>
        <field name="model">rehab</field>
        <field name="arch" type="xml">
            <list> <field name="name"/>
                <field name="injury_level"/>
                <field name="rehab_start_date"/>
            </list>
        </field>
    </record>

    <record id="view_rehab_form" model="ir.view">
        <field name="name">rehab.form</field>
        <field name="model">rehab</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="injury_level"/>
                        <field name="rehab_start_date"/>
                    </group>
                    <notebook>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rehab_main" model="ir.actions.act_window">
        <field name="name">Casos de Rehab</field>
        <field name="res_model">rehab</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_rehab_root" name="RehabilitaciÃ³n" sequence="10"/>
    <menuitem id="menu_rehab_list" name="Listado de Casos" parent="menu_rehab_root" action="action_rehab_main"/>
</odoo>