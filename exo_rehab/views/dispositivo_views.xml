<odoo>
    <record id="view_dispositivo_tree" model="ir.ui.view">
        <field name="name">exo.dispositivo.tree</field>
        <field name="model">exo.dispositivo</field>
        <field name="arch" type="xml">
            <list string="Exoesqueletos">
                <field name="name"/>
                <field name="modelo"/>
                <field name="estado" widget="badge"
                       decoration-success="estado == 'disponible'"
                       decoration-warning="estado == 'mantenimiento'"
                       decoration-info="estado == 'uso'"/>
            </list>
        </field>
    </record>

    <record id="view_dispositivo_form" model="ir.ui.view">
        <field name="name">exo.dispositivo.form</field>
        <field name="model">exo.dispositivo</field>
        <field name="arch" type="xml">
            <form string="Exoesqueleto">
                <header>
                    <field name="estado" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="NÃºmero de Serie"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="modelo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_exo_dispositivo" model="ir.actions.act_window">
        <field name="name">Inventario de Exoesqueletos</field>
        <field name="res_model">exo.dispositivo</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>