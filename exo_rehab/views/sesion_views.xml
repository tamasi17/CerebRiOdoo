<odoo>
    <record id="view_sesion_form" model="ir.ui.view">
        <field name="name">exo.sesion.form</field>
        <field name="model">exo.sesion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="paciente_id"/>
                            <field name="dispositivo_id"/>
                        </group>
                        <group>
                            <field name="fecha"/>
                            <field name="duracion"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Datos de Movilidad">
                            <group>
                                <label for="nivel_asistencia"/>
                                <div class="o_row">
                                    <field name="nivel_asistencia"/>
                                    <span>%%</span>
                                </div>
                                <field name="pasos_totales"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sesion_tree" model="ir.ui.view">
        <field name="name">exo.sesion.list</field>
        <field name="model">exo.sesion</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="paciente_id"/>
                <field name="fecha"/>
                <field name="nivel_asistencia" widget="progressbar"/>
                <field name="pasos_totales"/>
            </list>
        </field>
    </record>
</odoo>