<odoo>
    <record id="view_sesion_form" model="ir.ui.view">
        <field name="name">exo.sesion.form</field>
        <field name="model">exo.sesion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Referencia de Sesión"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="paciente_id"/>
                            <field name="dispositivo_id"/>
                            <field name="fecha"/>
                        </group>
                        <group string="Métricas de la Sesión">
                            <field name="duracion"/>
                            <label for="nivel_asistencia"/>
                            <div class="o_row">
                                <field name="nivel_asistencia"/>
                                <span>%</span>
                            </div>
                            <field name="pasos_totales"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observaciones Clínicas">
                            <field name="observaciones" placeholder="Escriba aquí los progresos..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sesion_tree" model="ir.ui.view">
        <field name="name">exo.sesion.list</field>
        <field name="model">exo.sesion</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="paciente_id"/>
                <field name="dispositivo_id"/>
                <field name="fecha"/>
                <field name="pasos_totales" sum="Total Pasos"/>
                <field name="nivel_asistencia" widget="progressbar"/>
            </list>
        </field>
    </record>

    <record id="action_exo_sesion" model="ir.actions.act_window">
        <field name="name">Sesiones de Rehabilitación</field>
        <field name="res_model">exo.sesion</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea la primera sesión de rehabilitación.
            </p>
        </field>
    </record>
</odoo>